<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recurringExpenses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MonetaryExpenses.RecurringExpenseFragment">

    <!-- RecyclerView to display recurring spendings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recurringExpensesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddRecurringExpense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button to add a new recurring spending -->
    <Button
        android:id="@+id/btnAddRecurringExpense"
        android:layout_width="243dp"
        android:layout_height="60dp"
        android:layout_marginBottom="68dp"
        android:text=" Add Recurring Expense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recurringExpensesRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>
